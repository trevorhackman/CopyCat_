<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hackman.trevor.copycat.MainActivity">

    <LinearLayout
        android:id="@+id/deathScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:alpha="0"
        android:background="@drawable/bordered_rectangle"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Game_Over"
            android:textAlignment="center"
            android:textAppearance="@style/DeathScreenText"
            android:textSize="40dp"
            android:textStyle="bold|italic"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/block"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Score"
                android:textAppearance="@style/DeathScreenText" />

            <TextView
                android:id="@+id/score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123"
                android:textAlignment="textStart"
                android:textAppearance="@style/DeathScreenText"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Best"
                android:textAlignment="textStart"
                android:textAppearance="@style/DeathScreenText" />

            <TextView
                android:id="@+id/highScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="321"
                android:textAlignment="textStart"
                android:textAppearance="@style/DeathScreenText"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Pressed"
                android:textAlignment="textStart"
                android:textAppearance="@style/DeathScreenText" />

            <TextView
                android:id="@+id/pressed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Green"
                android:textAlignment="textStart"
                android:textAppearance="@style/DeathScreenText"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Correct"
                android:textAlignment="textStart"
                android:textAppearance="@style/DeathScreenText" />

            <TextView
                android:id="@+id/correct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Red"
                android:textAlignment="textStart"
                android:textAppearance="@style/DeathScreenText"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/block"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mainMenuButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bordered_rectangle_2"
                android:text="@string/Menu"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,SpUsage" />

            <Button
                android:id="@+id/playAgainButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bordered_rectangle_2"
                android:text="@string/Play_Again"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,SpUsage" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/bordered_rectangle"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/Settings"
            android:textAlignment="center"
            android:textAppearance="@style/SettingsScreenText"
            android:textSize="30dp"
            tools:ignore="SpUsage" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/block"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Speed"
                android:textAlignment="center"
                android:textAppearance="@style/SettingsScreenText"
                android:textSize="25dp"
                tools:ignore="SpUsage" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/leftArrow"
                android:layout_width="@dimen/settings_arrow_size"
                android:layout_height="@dimen/settings_arrow_size"
                android:layout_gravity="center"
                android:background="@drawable/left_arrow" />

            <TextView
                android:id="@+id/speedText"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Extreme"
                android:textAlignment="center"
                android:textAppearance="@style/SettingsScreenText"
                android:textSize="20dp"
                tools:ignore="SpUsage" />

            <Button
                android:id="@+id/rightArrow"
                android:layout_width="@dimen/settings_arrow_size"
                android:layout_height="@dimen/settings_arrow_size"
                android:layout_gravity="center"
                android:background="@drawable/right_arrow" />
        </LinearLayout>

        <Button
            android:id="@+id/settingsCloseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bordered_rectangle_2"
            android:padding="0dp"
            android:text="@string/Close"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />
    </LinearLayout>

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/Black"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="ContentDescription" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:clickable="false"
        app:columnCount="2"
        app:rowCount="2">

        <hackman.trevor.copycat.ColorButton
            android:id="@+id/greenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/border_thickness"
            android:layout_marginRight="@dimen/border_thickness"
            android:layout_weight="1"
            android:background="@color/green"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <hackman.trevor.copycat.ColorButton
            android:id="@+id/redButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/border_thickness"
            android:layout_marginLeft="@dimen/border_thickness"
            android:layout_weight="1"
            android:background="@color/red"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <hackman.trevor.copycat.ColorButton
            android:id="@+id/yellowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/border_thickness"
            android:layout_marginTop="@dimen/border_thickness"
            android:layout_weight="1"
            android:background="@color/yellow"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <hackman.trevor.copycat.ColorButton
            android:id="@+id/blueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_thickness"
            android:layout_marginTop="@dimen/border_thickness"
            android:layout_weight="1"
            android:background="@color/blue"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />
    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/mainButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/circle"
        android:clickable="false"
        android:textColor="#ffffff"
        android:textSize="75dp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

    <Button
        android:id="@+id/symbolButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/play_symbol"
        android:clickable="false"
        android:visibility="visible" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="60dp"
        android:alpha="0"
        android:background="@drawable/instructions_rectangle"
        android:padding="7dp"
        android:text="@string/Watch_and_repeat"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:background="@drawable/button_bar_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="50dp">

        <Button
            android:id="@+id/moreGames"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:layout_marginRight="@dimen/menu_button_spread"
            android:alpha="1"
            android:background="@drawable/more_games"
            android:padding="0dp" />

        <Button
            android:id="@+id/noAds"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:layout_marginLeft="@dimen/menu_button_spread"
            android:layout_marginRight="@dimen/menu_button_spread"
            android:alpha="1"
            android:background="@drawable/no_ads"
            android:padding="0dp" />

        <Button
            android:id="@+id/star"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:layout_marginLeft="@dimen/menu_button_spread"
            android:layout_marginRight="@dimen/menu_button_spread"
            android:alpha="1"
            android:background="@drawable/star"
            android:padding="0dp" />

        <Button
            android:id="@+id/settings"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:layout_marginLeft="@dimen/menu_button_spread"
            android:alpha="1"
            android:background="@drawable/gear"
            android:clickable="false"
            android:padding="0dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/title_background"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/title_background"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/title_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:srcCompat="@drawable/logo5"
        tools:ignore="ContentDescription" />

</RelativeLayout>
